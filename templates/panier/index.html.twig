{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}

<h1>Panier</h1>

<div>Total du panier {{ cart.total }} €</div>

<table>
    <tr>
        <th>Id</th>
        <th>Nom</th>
        <th>Prix unitaire</th>
        <th>Quantité</th>
    </tr>

    {% for element in cart.elements %}
        <tr>
            <td>{{ element.book.id }}</td>
            <td>{{ element.book.titre }}</td>
            <td>{{ element.book.price }}</td>
            <td>{{ element.quantity }}</td>
        </tr>
    {% else %}
        <tr>
            <td colspan="4">Votre panier est vide</td>
        </tr>
    {% endfor %}
</table>

{% endblock %}
